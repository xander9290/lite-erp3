generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Partner {
  id    String  @id @default(cuid())
  name  String
  email String?

  User User? @relation("PartnerUserRelated")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([name])
  @@map("partners")
}

model User {
  id        String    @id @default(cuid())
  login     String    @unique
  password  String
  lastLogin DateTime? @map("last_login")
  active    Boolean   @default(false)

  partnerId String?  @unique @map("partner_id")
  Partner   Partner? @relation("PartnerUserRelated", fields: [partnerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}
